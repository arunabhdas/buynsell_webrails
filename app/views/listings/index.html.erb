<div class="jumbotron">
  <h1>Online Portal where buyers meets sellers!</h1>
  <h3>No middleman. Just Login and do your business!</h3>
</div>

<div class="center">
  <div class="row">
    <% @listings.each do |listing| %>
      <div class="col-md-3">
        <div class="thumbnail">
          <%= link_to image_tag(listing.image.url), listing %>
          <div class="caption">
            <h3><%= listing.name %></h3>
            <p><%= number_to_currency(listing.price, unit: "â‚¹") %></p>
            <p><%= "Sold By: #{listing.user.name}" %></p>
          </div>
        </div>

        <%= listing.description %><br>
        
      </div>
    <% end %>
  </div>
</div>

<br>

<% if user_signed_in? %>
  <%= link_to 'New Listing', new_listing_path, class: "btn btn-link" %>
<% end %>